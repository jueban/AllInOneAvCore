<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AllInOneAv</title>

    <link rel="stylesheet" href="~/css/bootstrap-select.css" />
    <script src="~/js/vue.min.js"></script>
    <script src="~/js/lib/signalr.js"></script>
    <script src="~/js/bootstrap-select.js"></script>
</head>

<body>
    <div class="container" id="app">
        <div class="btn-toolbar mb-3" role="toolbar">
            <div class="btn-group mr-2" role="group">
                <select class="selectpicker" multiple data-selected-text-format="count > 3" data-actions-box="true" data-style="btn-info" v-on:change="selectChange($event)">
                    <option value="1">Mustard</option>
                    <option value="2">Ketchup</option>
                    <option value="3">Relish</option>
                    <option value="4">Onions</option>
                </select>
            </div>
            <div class="btn-group mr-2" role="group">
                <select class="selectpicker" multiple data-selected-text-format="count > 3" data-actions-box="true" data-style="btn-info">
                    <option>Mustard</option>
                    <option>Ketchup</option>
                    <option>Relish</option>
                    <option>Onions</option>
                </select>
            </div>
            <div class="btn-group" role="group">
                <select class="selectpicker" multiple data-selected-text-format="count > 3" data-actions-box="true" data-style="btn-info">
                    <option>Mustard</option>
                    <option>Ketchup</option>
                    <option>Relish</option>
                    <option>Onions</option>
                </select>
            </div>
        </div>

        <div class="input-group mb-3">
            <input type="text" class="form-control" id="url">
            <div class="input-group-prepend">
                <input type="text" class="form-control" value="">
                <input type="number" step="1" class="form-control" value="-1">
            </div>
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="start">扫描</button>
            </div>
        </div>

        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">操作日志</span>
            </div>
            <textarea class="form-control" id="messages" style="height:700px;resize:none;background-color:#343a40!important;color:white"></textarea>
        </div>
    </div>

    <script>

        var app = new Vue({
            el: '#app',
            data: {
                data: {}
            },
            mounted: function () {
                this.initData();
            },
            methods: {

                initData: function () {
                    var vm = this;

                    $.ajax({ url: "/Scan/GetJavLibraryData", method: "GET" })
                        .done(function (data) { vm.data = data });
                },

                selectChange: function (item) {
                    var text = "";
                    $(item.currentTarget).val().forEach(function (item) {
                        text += item + ",";
                    });
                    $("#url").text(text.substring(0, text.length - 1));
                }
            }
        })

        var connection = new signalR.HubConnectionBuilder()
            .withUrl("http://localhost:20004/jobs")
            .build();

        connection.on("ScanJavLibrary", function (message) {
            $("#messages").append(message + "\n");
            $("#messages").scrollTop($("#messages")[0].scrollHeight);
        });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });

        $("body").on("click", '#start', function (event) {
            var message = $("#folder").val();
            connection.invoke("ScanJavLibrary", message).catch(function (err) {
                return console.error(err.toString());
            });
            event.preventDefault();
        });
    </script>
</body>
</html>