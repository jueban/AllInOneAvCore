<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AllInOneAv</title>

    <script src="~/js/vue.min.js"></script>
</head>

<body>
    <div id="app">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">名称</th>
                    <th scope="col">网站</th>
                    <th scope="col">磁链数量</th>
                    <th scope="col">时间</th>
                    <th scope="col">操作</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="item in items">
                    <th scope="row">{{item.id}}</th>
                    <td>{{item.name}}</td>
                    <td>{{item.webSiteStr}}</td>
                    <td>{{item.magUrlObj.length}}</td>
                    <td>{{item.dateStr}}</td>
                    <td><a type="button" class="btn btn-info mr-3" v-bind:href="['/Scan/ShowScanResult?id=' + item.id]">详情</a><a type="button" class="btn btn-danger" v-bind:href="['/Scan/DeleteScanResult?id=' + item.id]">删除</a></td>
                </tr>
            </tbody>
        </table>
    </div>

    <script>
        var app = new Vue({
            el: '#app',
            data: {
                items: {}
            },
            created: function () {
                this.initData();
            },
            methods: {

                initData: function () {
                    var vm = this;

                    $.ajax({ url: "/Scan/GetScanResult", method: "GET" })
                        .done(function (data) { vm.items = data });
                }
            }
        })
    </script>
</body>
</html>