<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AllInOneAv</title>
    <style>
        .content {
            overflow: hidden;
            position: absolute;
            top: 56px;
            bottom: 60px;
            left: 300px;
            right: 0px;
            overflow: auto;
            background-color: #343a40 !important;
            overflow: auto;
        }

        .sideNav {
            padding: 0px;
            position: absolute;
            left: 0px;
            top: 56px;
            bottom: 60px;
            width: 300px; /* same as .content left */
            background-color: #343a40 !important;
            border-right: 1px solid #000;
            z-index: 1020;
            overflow: auto;
        }

        .progress {
            padding: 0px;
            position: fixed;
            left: 300px;
            right: 0px;
            bottom: 60px;
            z-index: 1020;
        }

        .content-list-group {
            padding: 0px;
            position: fixed;
            left: 300px;
            right: 0px;
            top: 106px;
            bottom: 77px;
            overflow: auto;
            z-index: 1020;
        }
    </style>
</head>

<body>

    <div id="roots">@ViewData["roots"]</div>

    <div class="sideNav">
        <div class="list-group" id="rootsDiv">
            
        </div>
    </div>

    <div class="content">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb" id="bread">
            </ol>
        </nav>

        <ul class="list-group content-list-group" id="fileList">
        </ul>

        <div class="progress">
            <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>

    <script>
        $(document).ready(function () {

            showRoots();

            $("body").on('click', ".dir-list", function () {
                var content = $.ajax({ url: "/Local/GetFilesAndFolder?root=" + $(this).data("dir"), async: false }).responseJSON;

                $("#fileList").empty();
                $("#bread").empty();

                $(content.dirs).each(function () {
                    $("#fileList").append('<li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center content-list" data-dir=' + this.fullName + '>' + this.name + '</li>');
                });

                $(content.files).each(function () {
                    $("#fileList").append('<li class="list-group-item list-group-item-secondary d-flex justify-content-between align-items-center">' + this.name + '<span class="badge badge-primary badge-pill">' + this.lengthStr + '</span></li>');
                });

                for (var i in content.breadCrumb) {
                    $("#bread").append('<li class="breadcrumb-item"><a class="bread-list" href="#" data-dir=' + i + '>' + content.breadCrumb[i] + '</a></li>');
                }

                $(".progress-bar").text(content.currentInfo);
            });

            $("body").on('click', ".content-list", function () {
                var content = $.ajax({ url: "/Local/GetFilesAndFolder?root=" + $(this).data("dir"), async: false }).responseJSON;

                $("#fileList").empty();
                $("#bread").empty();

                $(content.dirs).each(function () {
                    $("#fileList").append('<li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center content-list" data-dir=' + this.fullName + '>' + this.name + '</li>');
                });

                $(content.files).each(function () {
                    $("#fileList").append('<li class="list-group-item list-group-item-secondary d-flex justify-content-between align-items-center">' + this.name + '<span class="badge badge-primary badge-pill">' + this.lengthStr + '</span></li>');
                });

                for (var i in content.breadCrumb) {
                    $("#bread").append('<li class="breadcrumb-item"><a class="bread-list" href="#" data-dir=' + i + '>' + content.breadCrumb[i] + '</a></li>');
                }

                $(".progress-bar").text(content.currentInfo);
            });

            $("body").on('click', ".bread-list", function () {
                var content = $.ajax({ url: "/Local/GetFilesAndFolder?root=" + $(this).data("dir"), async: false }).responseJSON;

                $("#fileList").empty();
                $("#bread").empty();

                $(content.dirs).each(function () {
                    $("#fileList").append('<li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center content-list" data-dir=' + this.fullName + '>' + this.name + '</li>');
                });

                $(content.files).each(function () {
                    $("#fileList").append('<li class="list-group-item list-group-item-secondary d-flex justify-content-between align-items-center">' + this.name + '<span class="badge badge-primary badge-pill">' + this.lengthStr + '</span></li>');
                });

                for (var i in content.breadCrumb) {
                    $("#bread").append('<li class="breadcrumb-item"><a class="bread-list" href="#" data-dir=' + i + '>' + content.breadCrumb[i] + '</a></li>');
                }

                $(".progress-bar").text(content.currentInfo);
            });
        });

        function showRoots() {
            var roots = $.ajax({ url: "/Local/GetRoots", async: false });
            $("#rootsDiv").empty();

            $(roots.responseJSON).each(function () {
                $("#rootsDiv").append('<a href="#" class="list-group-item list-group-item-secondary list-group-item-action d-flex justify-content-between align-items-center dir-list" data-dir=' + this.dir + '>' + this.dirName + '<span class="badge badge-primary badge-pill">' + this.availableSizeStr + ' / ' + this.totalSizeStr  + '</span></a>')
            });

            $(".progress-bar").text("");
        }
    </script>
</body>
</html>